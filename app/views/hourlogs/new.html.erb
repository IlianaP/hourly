<div class= "container p-3"> 
<div class="booyah-box col-10 offset-1">
  <h1>Log your hours</h1>
  <%= simple_form_for @hourlog do |f| %>
    <%= f.input :name %>
    <div class="row">
        <div class ="col-6">
          <%= f.input :project_id, :collection => @projects, label_method: :name, value_method: :id, label: "Choose Project", include_blank: true %>
        </div>
        <div class ="col-6">
          <%= f.input :description, label: "I worked on" %>
        </div>
    </div>
    <div class="row">
      <div class ="col-6">
        <%= f.input :hours %>
      </div>
      <div class ="col-6">
        <%= f.input :date, as: :date, html5: true %>
      </div>
    </div>
	<br />
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>
</div>