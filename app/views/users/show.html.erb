<div class = "container">
	<div class="booyah-box">
		<div class = "row p-3 ">
			<div class = "col-2">  
				<%= image_tag 'user.png', class: "img-responsive img-thumbnail img-circle" %>
			</div>
			<div class = "col-8">
				<h1><%= @user.fname %> <%= @user.lname %>, <span class ="font-weight-light"><%= @user.role %></span></h1>
				<h3 class = "text-bold font-weight-light"><%= @user.email %></h3>
				<h4 class = "text-primary font-weight-light">Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h4>
				<h4><%= @user.hourlogs.sum(:hours) %> <span class ="font-weight-light">total hours worked ðŸŽ‰</span></h4>
			</div>
			<div class = "col-2 my-auto">
				<%= link_to 'Log hours', new_hourlog_path, class: "btn btn-warning btn-large" %> 
			</div>
		</div>
	</div>
<div class="row"> 
	<div class="col-9"> 
		<div class="page_info">
	      <%= page_entries_info @hourlogs %>
	    </div>
	</div>
	<div class="col-3"> 
		<%= will_paginate @hourlogs, :container => false %>
	</div>
</div>
<div class = "row">
	<div class="col"> 
		<table class="table table-hover">
		  <thead>
		    <tr>
		      <th scope="col"> Date </th>
		      <th scope="col">Name</th>
		      <th scope="col">Project</th>
		      <th scope="col">Worked on</th>
		      <th scope="col">Hours</th>
		      <th scope="col">Actions</th>
		    </tr>
		  </thead>
		  <tbody class = "">
		  	<% @hourlogs.each do |h| %>
				  <div><tr>
				  	<td><p> <%= h.date.strftime('%B %d, %Y') %> </p></td>
				    <td><p><%= h.name %></p></td>
				    <td><p><%= h.project.name %></p></td>
				    <td><p><%= h.description %></p></td>
				    <td><p><%= h.hours %></p></td>
				    <td><p><%= link_to 'Edit', edit_hourlog_path(h), class: 'btn btn-info'%> <%= link_to 'Delete', hourlog_path(h), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %></td>
				  </tr></div>

			<% end %>
		  </tbody>
		</table>
	</div>
</div>
	<div class="clear"></div>
</div>