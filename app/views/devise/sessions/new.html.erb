<div class="sign-in-container">

<div class="left-col">
  <a class="navbar-brand" href="#">HYPERSPACE<span class = "font-weight-lighter">LOG</span></a>
  <h2 class = "quote"> Today is a beautiful day to build something cool. </h2>
</div>
<div class="right-col">
  <div class = "sign-in-form-container">
      <h2>Log in</h2>
      <br />
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %> </div>
          <div class = "ml-4"> <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'sign_in_btn' %>
        </div>
      <% end %>
        <br />
      <%= render "devise/shared/links" %>
    </div>
      </div>
  </div>
</div>
