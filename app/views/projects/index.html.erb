<div class= "container"> 

<div class = "row">
	<h2 class= "p-3 col-10"> Projects </h2>
	<div class="p-3 col-2"> 
		<%= link_to "Add Project", new_project_path , class: 'btn btn-primary' %>
	</div>
</div>


<div class = "row">
	<div class="col"> 
		<table class="table table-hover">
		  <thead>
		    <tr>
		      <th scope="col">Project <i class="fa fa-plus-circle"></i></th>
		      <th scope="col">Description</th>
		      <th scope="col">Plan</th>
		      <th scope="col">Plan Hours</th>
		      <th scope="col">Hours Worked</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @projects.each do |project| %>
				  <div>
				    <td><p><%= project.name %></p></td>
				    <td><i><%= project.description %></i></td>
				    <td><p><%= project.plan %></p></td>
				    <td><p><%= project.planhours %></p></td>
				    <td><p><%= project.thours %></p></td>
				  </tr></div>
			<% end %>
		  </tbody>
		</table>
	</div>
</div>
</div>


